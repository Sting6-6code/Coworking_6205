<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.AdminController"
            stylesheets="@application.css"
            maxWidth="Infinity"    
            maxHeight="Infinity">

    <!-- 顶部栏 -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT"
          style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e9f0fb); 
                 -fx-padding: 12;">
            <Label fx:id="welcomeLabel" text="Welcome, "
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill:#21456B;"/>
            <Button text="Logout" onAction="#handleLogout" 
                style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    

    <left>
        <VBox spacing="15" alignment="CENTER"
              style="-fx-background-color: #F0F8FF; -fx-padding: 15;">

            <!-- LOGO -->
            <ImageView fitWidth="180" fitHeight="180" preserveRatio="true">
                <image>
                    <Image url="/icons/logo.png"/>
                </image>
            </ImageView>

            <!-- Overview -->
            <Button prefWidth="160" onAction="#showOverview" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="/icons/Overview.png"/></image>
                        </ImageView>
                        <Label text="Overview" style="-fx-text-fill: white;"/>
                    </HBox>
                </graphic>
            </Button>

            <!-- Users -->
            <Button prefWidth="160" onAction="#showUsers" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="/icons/user.png"/></image>
                        </ImageView>
                        <Label text="Users" style="-fx-text-fill: white;"/>
                    </HBox>
                </graphic>
            </Button>

            <!-- Spaces -->
            <Button prefWidth="160" onAction="#showSpaces" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="/icons/space.png"/></image>
                        </ImageView>
                        <Label text="Spaces" style="-fx-text-fill: white;"/>
                    </HBox>
                </graphic>
            </Button>

            <!-- Bookings -->
            <Button prefWidth="160" onAction="#showBookings" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="/icons/booking.png"/></image>
                        </ImageView>
                        <Label text="Bookings" style="-fx-text-fill: white;"/>
                    </HBox>
                </graphic>
            </Button>

            <!-- Billing -->
            <Button prefWidth="160" onAction="#showBilling" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="/icons/billing.png"/></image>
                        </ImageView>
                        <Label text="Billing" style="-fx-text-fill: white;"/>
                    </HBox>
                </graphic>
            </Button>

            <!-- Analytics -->
            <Button prefWidth="160" onAction="#showAnalytics" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="/icons/analytics-solid.png"/></image>
                        </ImageView>
                        <Label text="Analytics" style="-fx-text-fill: white;"/>
                    </HBox>
                </graphic>
            </Button>

            <!-- Questions -->
            <Button prefWidth="160" onAction="#showQuestions" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="/icons/question.png"/></image>
                        </ImageView>
                        <Label text="Questions" style="-fx-text-fill: white;"/>
                    </HBox>
                </graphic>
            </Button>

        </VBox>
    </left>

    <!-- 中间部分 -->
    <center>
        <StackPane fx:id="contentArea"
                   style="-fx-background-color: #ffffff; -fx-padding: 20;">
            <Label text="Select a section from the left panel."/>
        </StackPane>
    </center>

</BorderPane>
