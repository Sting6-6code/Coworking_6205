<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.AdminOverviewController"
      spacing="15" alignment="TOP_CENTER" prefWidth="800" prefHeight="600"
      style="-fx-padding: 20;">

    <Label text="Admin Overview - User Management" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <TableView fx:id="userTable" editable="true" prefWidth="750">
        <columns>
            <TableColumn fx:id="colUsername" text="Username" prefWidth="120"/>
            <TableColumn fx:id="colPassword" text="Password" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
            <TableColumn fx:id="colMembership" text="Membership" prefWidth="120"/>
            <TableColumn fx:id="colEdit" text="Edit" prefWidth="70"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add New User" onAction="#addUser" style="-fx-font-size: 14px;"/>
        <Button text="Save Changes" onAction="#saveChanges" style="-fx-font-size: 14px;"/>
    </HBox>
</VBox>
