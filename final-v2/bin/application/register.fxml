<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.RegisterController"
      prefHeight="400.0" prefWidth="600.0">
   <children>
      <Label layoutX="162.0" layoutY="14.0" prefHeight="69.0" prefWidth="295.0"
             text="Welcome to the registration system">
         <font>
            <Font size="18.0" />
         </font>
      </Label>

      <Label layoutX="123.0" layoutY="87.0" text="Name" />
      <TextField fx:id="nameField" layoutX="214.0" layoutY="92.0" />

      <Label layoutX="123.0" layoutY="128.0" text="Password" />
      <TextField fx:id="passwordField" layoutX="214.0" layoutY="133.0" />

      <Label layoutX="123.0" layoutY="163.0" text="Email" />
      <TextField fx:id="emailField" layoutX="214.0" layoutY="168.0" />

      <Label layoutX="123.0" layoutY="198.0" text="Type" />
      <ChoiceBox fx:id="typeBox" layoutX="214.0" layoutY="203.0" prefHeight="25.0" prefWidth="160.0" />

      <Button fx:id="registerButton" layoutX="214.0" layoutY="257.0"
              text="Register" onAction="#register" />

      <Button fx:id="backToLoginButton" layoutX="300.0" layoutY="257.0"
              text="Login" onAction="#backToLogin" />
   </children>
</Pane>
