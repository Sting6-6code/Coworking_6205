<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" stylesheets="@application.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="controller.TimeSlotSelectorController">

    <top>
        <Label fx:id="lblTitle" style="-fx-font-size: 18px; -fx-padding: 10px;" text="Select Time Slot" />
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">

            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label text="Click and drag to select your time slot (9:00–21:00)" />
            <DatePicker fx:id="datePicker" onAction="#handleDateChange" />

            <ScrollPane fitToWidth="true">
                 <FlowPane fx:id="timeBar" hgap="5" prefWrapLength="600" vgap="5" />
            </ScrollPane>

            <Label fx:id="lblSelectedTime" text="Selected: —" />
            <Label fx:id="lblCost" text="Estimated Cost: —" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">

            <!-- Correct approach: use VBox.margin or HBox.padding tag -->
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Button fx:id="btnConfirm" text="Confirm Booking" />
            <Button fx:id="btnRelease" text="Release Time Slot" />
            <Button onAction="#handleClose" text="Cancel" />
        </HBox>
    </bottom>

</BorderPane>
