<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminQuestionController">


    <!-- Center table displaying questions -->
    <center>
        <VBox spacing="10" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="All User Questions" />
            
			<TableView fx:id="questionTable" prefHeight="400" prefWidth="500">
			    <columns>
			        <TableColumn fx:id="colUser" prefWidth="150" text="Username" />
			        <TableColumn fx:id="colContent" prefWidth="709.0" text="Content" />
			    </columns>
			</TableView>
        </VBox>
    </center>

</BorderPane>
