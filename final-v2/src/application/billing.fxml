<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.BillingController"
      spacing="20" alignment="TOP_CENTER" prefWidth="800" prefHeight="600"
      style="-fx-padding: 20;">

    <Label text="My Billing History" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Filter section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Filter by Type:"/>
        <ChoiceBox fx:id="typeFilterChoice" prefWidth="150"/>
        <Button text="Refresh" onAction="#refreshData"/>
    </HBox>

    <!-- Transaction table -->
    <TableView fx:id="transactionTable" prefWidth="750" prefHeight="400">
        <columns>
            <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="300"/>
            <TableColumn fx:id="colAmount" text="Amount" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Summary section -->
    <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
        <Label text="Total Spent:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="totalAmountLabel" text="$0.00" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>
    </HBox>

</VBox>
